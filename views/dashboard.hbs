<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
{{#if offices}}
<table class="striped">
    <thead>
        <th>Title</th>
        <th>Status</th>
        <th>Date Created</th>
        <th></th>
    </thead>
    <tbody>
        {{#each offices}}
        <tr>
            <td>
                <a href="/offices/{{_id}}">{{title}}</a>
            </td>
            <td>
                <span class="dash-status">{{status}}</span>
            </td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
You've not created any office spaces
{{/if}}